@model List<ETicaretApp.Models.Alisveris>
@{
    ViewBag.Title = "Index";
}

<h2 class="text-center h2 mt-5">Alışverişler Sayfası</h2>
<hr />
@if (Model.Count == 0)
{
    <div class="alert alert-danger" role="alert">
        Sisteme kayıtlı alışveriş bulunamadı.
        <a href="/Alisveris/Add" class="btn btn-primary">Ekle</a>
    </div>
}
else
{
    <div class="row mt-2 mb-2">
        <form action="/Alisveris/Index" method="get">
            <input type="text" id="val" name="val" class="form-control" style="float: left; width: 90%; margin-left: 10px;" placeholder="Sepet ID Örn. 5" />
            <input type="submit" class="btn btn-success btn-sm" value="Ara" style="float: left; margin-top: 3px; margin-left: 3px;" />
            <a href="/Alisveris/Add" class="btn btn-primary btn-sm" style="float: left; width: 50px; margin-top: 3px; margin-left: 3px;">Ekle</a>
        </form>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
        <th>#</th>
        <th>Ürün</th>
        <th>Miktar</th>
        <th>Sepet ID</th>
        <th>Veritabanı İşlemleri</th>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id.ToString()</td>
                    <td>@item.Urunu.UrunAdi</td>
                    <td>@item.Miktar.ToString()</td>
                    <td>@item.Sepeti.Id</td>
                    <td class="text-center">
                        <div class="row">
                            <div class="col-md-4">
                                <a class="btn btn-warning btn-sm" href="/Alisveris/Update/@item.Id" style="width: 70px;">Güncelle</a>
                            </div>
                            <div class="col-md-4 d-flex justify-content-center">
                                <a class="btn btn-danger btn-sm" href="/Alisveris/Delete/@item.Id" style="width: 100px;">Sil</a>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}

