@model ETicaretApp.Models.SepetDto
@{
    ViewBag.Title = "Update";
}

<h2 class="h2 text-center mt-2">Sepet Güncelleme</h2>
<hr />
<div style="margin-left: 10px;">
    @using (Html.BeginForm("Update", "Sepet", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(c=>c.SepetId)
        <br />
        <div class="row">
            <div class="col-md-4">
                <label><span class="h4">İndirim Oranı</span></label>
                @Html.TextBoxFor(c => c.IndirimOrani, new { @class = "form-control mt-3", @style = "width:300px;" })
                @Html.ValidationMessageFor(c => c.IndirimOrani, null, new { @class = "text-danger" })
            </div>
            <div class="col-md-4">
                <label><span class="h4">Ödeme Tipi</span></label>
                @Html.TextBoxFor(c => c.AlisSekli, new { @class = "form-control mt-3", @style = "width:300px;" })
                @Html.ValidationMessageFor(c => c.AlisSekli, null, new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="row d-flex justify-content-center">
            <button type="submit" class="btn btn-primary mt-2" style="width: 200px;">Güncelle</button>
        </div>
    }
</div>

